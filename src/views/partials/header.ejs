                    <li class="nav__li"><a href="/admin">ADMIN</a></li>
                    <li class="nav__li"><a href="/login/logout">SALIR</a></li>
                    <li class="nav__li">
                        <a href="#">
            
                            <box-icon name='cart' color='#f96301' class="bx"></box-icon>
                        </a>
                    </li>
