            <a href="/" class="header__a">
                <div class="header__title"></div>
            </a>
                
            <nav class="header__nav" id="nav">
                <li class="nav__li"><a href="/shop">SHOP</a></li>
                <li class="nav__li"><a href="/contact">CONTACT</a></li>
                <li class="nav__li"><a href="/login/logout">SALIR</a></li>
                <li class="nav__li">
                    <a href="#">
                        <box-icon name='cart' color='#f96301' class="bx"></box-icon>
                    </a>
