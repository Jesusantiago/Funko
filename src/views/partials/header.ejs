                    <li class="nav__li"><a href="/contact">CONTACT</a></li>
                    <li class="nav__li"><a href="/login">LOGIN</a></li>
                    <li class="nav__li">
                        <a href="#">
            
                            <box-icon name='cart' color='#f96301' class="bx"></box-icon>
                        </a>
                    </li>
                </nav>
                
                <div class="burger" id="burger"></div>
        </header>
