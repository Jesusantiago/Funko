<%- include("../partials/header") %>

<main class="main__login">
        <section class="section__login">
        <h1 class="login__title">INGRESAR A MI CUENTA</h1>

        <form class="login__form" action="/login/" method="POST">              

            <label class="login__form_label" for="email">EMAIL:
                <% if(typeof valores == "undefined" ) {%>

                    <input type="text" class="login__form_input" id="loginEmail" placeholder="johndoe@correo.com" name="email" >
                <% } else {%>
                    <input type="text" class="login__form_input" id="loginEmail" placeholder="johndoe@correo.com" name="email" value="<%= valores.email %>">
                <%}%>
            </label>
            
            <label class="login__form_label" for="password">CONTRASEÑA:
                <input type="password"  class="login__form_input" 
            id="loginPassword" placeholder="● ● ● ● ● ● ● ● ●"  name="password">
            </label>
            
            <article class="login__article">
                <input type="submit" class="login__article_ingresar" value="Ingresar" id="btnIngresar">
                                
                <label  class="login__article_label">
                    <input type="checkbox"  class="login__article_input" id="ingresar__checkbox"> Recordarme</label>
            </article>
        </form>

        <span class="login__recupero">Olvidé mi contraseña</span>

        <% if(typeof validaciones != "undefined") {%>
            <% validaciones.forEach((validacion) =>{ %>
                <div class="error_validacion">
                    <strong> <%= validacion.msg %> </strong>
                </div>
            
            <% })%>
        <% }%>

    </section>
    
</main>

<%- include("../partials/footerUnic") -%>