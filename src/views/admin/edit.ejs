<%- include("../partials/header") -%>

<section class="main__modal_add">

    <article class="main__add">

        <h2 class="add__title">EDITAR ITEM</h2>

        <form class="add__form" action="/admin/edit/<%= item.product_id %>" method="POST" enctype="application/x-www-form-urlencoded">

            <article class="form_label">
                <section class="label_category">
                    <label class="add__form_label categoria" for="category">Categoría:</label>
                    <select class="add__form_input" name="category" required>  
                        <% categories.forEach((category,i) => { %>
                            <option value="<%= i+1 %>" <% if(item.category_id === i +1) { %> selected <% } %> > <%= category.category_name %></option>
                            <% }) %>
                    </select>
                </section>
                
                <section class="label_licence">
                    <label class="add__form_label licencia" for="licence" >Licencia:</label>
                    <select class="add__form_input" name="licence" required>
                        <% licences.forEach((licence,i) => { %>
                        <option value="<%= i+1 %>" <% if(item.licence_id === i +1) {%> selected <% } %> > <%= licence.licence_name %></option>
                        <% }) %>
                    </select>
                </section>
            </article>
       
            <label class="add__form_label name" for="name">Nombre del producto:
                <input type="text" class="add__form_input" value="<%= item.product_name %>" name="name">
            </label>

            <label class="add__form_label message" for="description">
                <textarea class="add__form_input" name="description"><%= item.product_description %></textarea>
            </label>
            
            <label class="add__form_label sku" for="sku">SKU:
                <input type="text" class="add__form_input" size="7" value="<%= item.sku %>" name="sku">
            </label>
            
            <label class="add__form_label price" for="price">Precio:
                <input type="text" class="add__form_input" value="<%= item.price %>" size="7" name="price">
            </label>
            
            <label class="add__form_label stock" for="stock">Stock:
                <input type="text" class="add__form_input" value="<%= item.stock %>" size="3" name="stock">
                <span>Unidades</span>
            </label>
            
            <label class="add__form_label descuentos" for="discount">Descuento:
                <input type="text" class="add__form_input" value="<%= item.disconunt %>" size="3" name="discount">
            </label>
            
            <article class="form_dues">
                <label class="add__form_label cuotas" for="dues">Cuotas:</label>
                <select class="add__form_input" name="dues" required>
                    <option value="0" <% if(item.dues === 0) { %> selected <% }%>>Sin Cuotas</option>
                    <option value="3" <% if(item.dues === 3) { %> selected <% }%>>3 couta s/interes</option>
                    <option value="6" <% if(item.dues === 6) { %> selected <% }%>>6 couta s/interes</option>
                    <option value="9" <% if(item.dues === 9) { %> selected <% }%>>9 couta s/interes</option>      
                    <option value="12" <% if(item.dues === 12) { %> selected <% }%>>12 couta s/interes</option>           
                </select>
            </article>

            <label class="add__form_label image">Imágenes:
                <input type="file" accept="image/png, image/jpeg" class="add_form_input">
            </label>



            <input type="submit" class="add__from_input"  value="Editar Producto">

            <input type="reset" class="add__from_input" value="Limpiar">
        </form>

    </article>

</section>


</body>

</html>